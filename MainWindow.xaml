<Window x:Class="SearchEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchEngine"
        mc:Ignorable="d"
        Title="Company Search" Height="450" Width="800" ResizeMode="NoResize">
    <Window.Background>
        <SolidColorBrush Color="#FFEC9E" />
    </Window.Background>

    <Grid x:Name="hover">
        <!-- Background Rectangle -->
        <!-- <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="#5D8736" Opacity="0.8" />-->

        <!-- COLUMNS -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>

        <!-- ROWS -->
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="75" />
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="1" Grid.ColumnSpan="5" Fill="#ED9455" />
        <Rectangle Grid.Row="0" Grid.ColumnSpan="5" Fill="#ED9455" />

        <!-- COMPONENTS -->

        <!-- DROPDOWN -->
        <ComboBox Name="DropBox" Grid.Column="1" HorizontalAlignment="Center" Margin="0,12,0,0" Grid.Row="2" VerticalAlignment="Top" Width="120" Height="37" SelectedIndex="0" Background="Black" BorderBrush="#ED9455" />
        <!-- SEARCH -->
        <Border
        BorderThickness="2"
        CornerRadius="1"
        Background="White"
        Margin="0,10,0,0"
        Grid.Column="2"
        Grid.Row="2"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Top">
            <TextBox Name="SearchBox"
             TextWrapping="Wrap"
             Text="Search..."
             Foreground="DarkSlateGray"

             FontSize="25"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Center"
             Width="Auto"
             Height="37"
             GotFocus="SearchBox_GotFocus"
             LostFocus="SearchBox_LostFocus" Background="#FFFFB163" BorderBrush="#FFF87F07" />
        </Border>

        <!-- SEARCH BUTTON -->
        <Button Name="SearchButton" Grid.Column="3" Content="🔍 SEARCH" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Top" Width="130" Height="50" Foreground="Black" FontWeight="Bold"  FontSize="15" Click="SearchButton_Click" BorderBrush="#00000000" Margin="0,5,0,0" Cursor="Hand">
            <Button.Background>
                <ImageBrush ImageSource="/pngegg.PNG" Stretch="Uniform" />
            </Button.Background>
        </Button>
        <!-- HEADER -->
        <TextBlock Name="CompanyHeader" Grid.Column="2" HorizontalAlignment="Stretch" Grid.Row="1" TextWrapping="Wrap" Text="{Binding Text, ElementName=SearchBox}" VerticalAlignment="Center" Height="39" Width="Auto" FontSize="30" FontWeight="Bold" Foreground="Black" />
        <!-- UPLOAD -->
        <Button Name ="UploadButton" Grid.Column="3" Content="       UPLOAD" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Width="125" Height="50" FontSize="15" FontWeight="Bold" Foreground="Black" Click="UploadButton_Click" Margin="10,0,0,0" BorderBrush="#00000000" Cursor="Hand">

            <Button.Background>
                <ImageBrush ImageSource="/pngegg.PNG" />
            </Button.Background>
        </Button>

        <!-- SEARCH RESULT-->
        <ListBox Name="SearchResultsListBox" Grid.Row="3" Margin="0,28,10,0" SelectionChanged="SearchResultsListBox_SelectionChanged"  Grid.Column="1" BorderThickness="1,1,1,1" Background="#FFFFB163" BorderBrush="#FFF87F07">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding CompanyName}"  FontSize="20" />
                        <!--<TextBlock Text="{Binding SecNum, StringFormat='SEC #: {0}'}" />
                        <TextBlock Text="{Binding DateRegistered, StringFormat='Date Registered: {0}'}" />
                        <TextBlock Text="{Binding LicenseNumber, StringFormat='License Number: {0}'}" />-->
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock Name="NoResultTextBlock" Visibility="Collapsed" Grid.Column="1" Grid.Row="3" Margin="0,34,0,0" Text="No result found" />
        <!--LOGO-->
        <Image Grid.Column="1" HorizontalAlignment="Center" Height="70" Margin="0,5,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="70" Source="/image-removebg-preview (2).png">
        </Image>
        <!--UPLoAD ICON-->
        <Image Grid.Column="3" HorizontalAlignment="Left" Height="26" Margin="29,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="32" Source="/icons8-upload-64.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/icons8-upload-64.png" />
            </Image.OpacityMask>
        </Image>
        <!--RESULT HEADER-->
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="32,1,0,0" Grid.Row="3" TextWrapping="Wrap" Text="RESULTS" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" />

        <!--SINGLE COMPANT INFO-->
        <!--ADS INFO FREE SPACE POR FUTUTE UPDATE
        <Image Grid.Column="3" HorizontalAlignment="Left" Height="214" Margin="6,0,0,0" Grid.Row="3" VerticalAlignment="Center" Width="132" Source="/shopee_8_8_sale_product_intro_3_b1dbd75738.png" Stretch="Fill">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/shopee_8_8_sale_product_intro_3_b1dbd75738.png" />
            </Image.OpacityMask>
        </Image>-->

        <!--Company INfo -->
        <Rectangle Grid.Column="2" HorizontalAlignment="Center" Height="249" Grid.Row="3" Stroke="#FFED9455" VerticalAlignment="Center" Width="460" StrokeThickness="5" />

        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="21,35,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Company Name :" VerticalAlignment="Top" Height="23" Width="143" FontSize="17" FontWeight="Bold" />
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="94,75,0,0" Grid.Row="3" TextWrapping="Wrap" Text="  SEC # : " VerticalAlignment="Top" Height="24" Width="70"  FontSize="17" FontWeight="Bold" RenderTransformOrigin="0.227,0.668" />
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="56,109,0,0" Grid.Row="3" TextWrapping="Wrap" Text="  Licensed # :" VerticalAlignment="Top" Height="24" Width="108"  FontSize="17" FontWeight="Bold" />
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="21,144,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Date Registered :" VerticalAlignment="Top" Height="28" Width="143"  FontSize="17" FontWeight="Bold" />
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="310,75,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Violations :" VerticalAlignment="Top" Height="24" Width="104"  FontSize="17" FontWeight="Bold" />
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="21,177,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Tax Payer Name :" VerticalAlignment="Top" Height="28" Width="143"  FontSize="17" FontWeight="Bold" />
        <TextBox x:Name="CompanyName" Grid.Column="2" HorizontalAlignment="Left" Margin="166,30,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="278" Height="35" FontSize="17" FontWeight="Bold" FontStyle="Italic" IsReadOnly="True" Background="#FFFFB163" BorderBrush="#FFF87F07" />
        <TextBox x:Name="SecNum" Grid.Column="2" HorizontalAlignment="Center" Margin="0,73,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="134" Height="26" FontSize="17" FontWeight="Bold" FontStyle="Italic" IsReadOnly="True" Background="#FFFFB163" BorderBrush="#FFF87F07" />
        <TextBox x:Name="LicenseNumber" Grid.Column="2" HorizontalAlignment="Center" Margin="0,109,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="134" Height="26" FontSize="17" FontWeight="Bold" FontStyle="Italic" IsReadOnly="True" Background="#FFFFB163" BorderBrush="#FFF87F07" />
        <TextBox x:Name="DateRegistered" Grid.Column="2" HorizontalAlignment="Center" Margin="0,144,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="134" Height="26" FontSize="17" FontWeight="Bold" FontStyle="Italic" IsReadOnly="True" Background="#FFFFB163" BorderBrush="#FFF87F07" />
        <TextBox x:Name="TaxPayerName" Grid.Column="2" HorizontalAlignment="Center" Margin="0,177,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="134" Height="26" FontSize="17" FontWeight="Bold" FontStyle="Italic" IsReadOnly="True" Background="#FFFFB163" BorderBrush="#FFF87F07" />
        <TextBox x:Name="Violations" Grid.Column="2" HorizontalAlignment="Left" Margin="310,109,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="134" Height="96" FontSize="17" FontWeight="Bold" FontStyle="Italic" IsReadOnly="True" Background="#FFFFB163" BorderBrush="#FFF87F07" />

        <!-- UPLOADS FILES-->
        <ListBox Name="FileUploads" Grid.Column="3" Grid.Row="3" d:ItemsSource="{d:SampleData ItemCount=5}" Height="217" VerticalAlignment="Top" Margin="6,28,10,0" BorderThickness="1,1,1,1" Background="#FFFFB163" BorderBrush="#FFF87F07" SelectionChanged="FileUploads_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontSize="15" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock Name="uploads" Grid.Column="3" HorizontalAlignment="Left" Margin="29,1,0,0" Grid.Row="3" TextWrapping="Wrap" Text="UPLOADS" VerticalAlignment="Top"  FontSize="20" FontWeight="Bold" />
    </Grid>
</Window>