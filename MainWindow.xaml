<Window x:Class="SearchEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchEngine"
        mc:Ignorable="d"
        Title="Company Search" Height="450" Width="800">
    <Window.Background>
        <SolidColorBrush Color="SkyBlue" />
    </Window.Background>
    <Grid>
        <!-- Background Rectangle -->
        <!-- <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="#5D8736" Opacity="0.8" />-->

        <!-- COLUMNS -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>

        <!-- ROWS -->
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="75" />
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <!-- COMPONENTS -->

        <!-- DROPDOWN -->
        <ComboBox Name="DropBox" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="120" Height="37" />
        <!-- SEARCH -->
        <TextBox Name="SearchBox"
         Grid.Column="2"
         HorizontalAlignment="Stretch"
         Margin="0,10,0,0"
         Grid.Row="2"
         TextWrapping="Wrap"
         Text="Search..."
         VerticalAlignment="Top"
         Width="Auto"
         Height="37"
         Foreground="Gray"
         GotFocus="SearchBox_GotFocus"
         LostFocus="SearchBox_LostFocus" />

        <!-- SEARCH BUTTON -->
        <Button Name="SearchButton" Grid.Column="3" Content="Search" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="130" Height="39" Background="#4CAF50" Foreground="#FFFFFF" Click="SearchButton_Click" />
        <!-- HEADER -->
        <TextBlock Name="CompanyHeader" Grid.Column="2" HorizontalAlignment="Stretch" Grid.Row="1" TextWrapping="Wrap" Text="{Binding Text, ElementName=SearchBox}" VerticalAlignment="Center" Height="39" Width="Auto" FontSize="30" FontWeight="Bold" Foreground="Black" />
        <!-- UPLOAD -->
        <Button Name ="UploadButton" Grid.Column="3" Content="Upload" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="130" Height="39" Background="#4CAF50" Foreground="#FFFFFF" Click="UploadButton_Click" />

        <!-- SEARCH RESULT-->
        <ListBox Name="SearchResultsListBox" Grid.Column="1" Grid.Row="3" Margin="0,34,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding CompanyName}"  FontSize="20" />
                        <!--<TextBlock Text="{Binding SecNum, StringFormat='SEC #: {0}'}" />
                        <TextBlock Text="{Binding DateRegistered, StringFormat='Date Registered: {0}'}" />
                        <TextBlock Text="{Binding LicenseNumber, StringFormat='License Number: {0}'}" />-->
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--LOGO-->
        <Image Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="23,4,0,0" Grid.RowSpan="2" Grid.Row="1" VerticalAlignment="Top" Width="94" Source="/letter-c-and-circles4612.logowik.com.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/letter-c-and-circles4612.logowik.com.png" />
            </Image.OpacityMask>
        </Image>
        <!--UPLoAD ICON -->
        <Image Grid.Column="3" HorizontalAlignment="Left" Height="26" Margin="20,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="32" Source="/images-removebg-preview.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/images-removebg-preview.png" />
            </Image.OpacityMask>
        </Image>
        <!--RESULT HEADER-->
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="0,7,0,0" Grid.Row="3" TextWrapping="Wrap" Text="RESULT:" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" />
        <!--RESULT HEADER-->
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="32,27,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Company Name :" VerticalAlignment="Top" Height="23" Width="134" FontSize="15" FontWeight="Bold" />
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="32,89,0,0" Grid.Row="3" TextWrapping="Wrap" Text="SEC # : " VerticalAlignment="Top" Height="24" Width="66"  FontSize="15" FontWeight="Bold" />
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="32,118,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Licensed # :" VerticalAlignment="Top" Height="24" Width="88"  FontSize="15" FontWeight="Bold" />
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="32,152,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Date Registered :" VerticalAlignment="Top" Height="28" Width="134"  FontSize="15" FontWeight="Bold" />
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="300,27,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Violations :" VerticalAlignment="Top" Height="24" Width="66"  FontSize="15" FontWeight="Bold" />
        <TextBox Grid.Column="2" HorizontalAlignment="Left" Margin="159,27,0,0" Grid.Row="3" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Height="51" />
        <TextBox Grid.Column="2" HorizontalAlignment="Left" Margin="87,92,0,0" Grid.Row="3" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="192" />
        <TextBox Grid.Column="2" HorizontalAlignment="Left" Margin="120,120,0,0" Grid.Row="3" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="159" />
        <TextBox Grid.Column="2" HorizontalAlignment="Left" Margin="159,152,0,0" Grid.Row="3" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" />
        <RichTextBox Grid.Column="2" Grid.Row="3" Margin="300,59,25,70">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>