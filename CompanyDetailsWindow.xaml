        <TextBlock Grid.Row="1" Grid.Column="0" Text="Violation:" Margin="0,11,0,-11" />
        <TextBlock Grid.Row="1" Text="{Binding Violation}" Margin="88,0,0,0" />
        -->
    </Grid>
</Window>